<nav>
  <img src="https://res.cloudinary.com/abualex/image/upload/f_auto,q_auto/v1685965296/pscc/pscc.avif" alt="PSCC Logo" class="logo">
  <ul class="nav-links" id="nav-links">
    <li><a href="/">Home</a></li>
    <li><a href="/about/">About</a></li>
    <li><a href="/history/">History</a></li>
    <li><a href="/faz3a/">Actions</a></li>
    <li><a href="/volunteer/">Get Involved</a></li>
  </ul>
  <div class="hamburger" id="hamburger">
    <img id="open" src="https://res.cloudinary.com/abualex/image/upload/v1677176428/Hamburger_icon.svg">
    <img id="close" src="https://res.cloudinary.com/abualex/image/upload/v1677176693/icons8-macos-close-30.png">
  </div>
</nav>

<style>
  nav {
    background-color: var(--white);
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100px;
    width: 100%;
    box-sizing: border-box;
    color: var(--black);
    border-bottom: 1px dotted var(--black);
  }

  nav ul {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    height: 100%;
    align-items: center;
  }

  nav ul li {
    margin: 0;
    font-family: 'Montserrat', sans-serif;
    border-left: 1px dotted var(--black);
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    height: 100%;
  }

  nav ul li a {
    color: var(--black);
    text-decoration: none;
    font-size: .8rem;
    font-weight: 600;
  }

  .hamburger {
    position: fixed;
    top: 15px;
    right: 15px;
    z-index: 9999;
  }

  .hamburger img {
    width: 30px;
    height: 30px;
    cursor: pointer;
    display: none;
  }

  .hamburger img#close {
    display: none;
  }

  @media (max-width: 768px) {
    .logo{
      display: none;
    }
  }

  @media (max-width: 601px) {
    .hamburger img {
      display: block;
    }
    
    .nav-links {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
      z-index: 2000;
    }

    .nav-links li {
      text-align: left;
    }

    .nav-links li a {
      display: block;
      color: var(--black);
    }

    .nav-links.active {
      display: flex;
      background-color: var(--white);
    }

  }

  .logo {
    height: 3.25em;
    margin: 0 1rem;
    padding: 0;
  }
  
</style>

<script>
var hamburger = document.getElementById('hamburger');
var navLinks = document.getElementById('nav-links');
var openIcon = document.getElementById('open');
var closeIcon = document.getElementById('close');

window.addEventListener('resize', function() {
  if (window.innerWidth <= 601) {
    openIcon.style.display = 'block';
    closeIcon.style.display = 'none';
  } else {
    openIcon.style.display = 'none';
    closeIcon.style.display = 'none';
    navLinks.classList.remove('active');
  }
});

hamburger.addEventListener('click', function() {
  navLinks.classList.toggle('active');

  // toggle visibility of the icons
  if (navLinks.classList.contains('active')) {
    openIcon.style.display = 'none';
    closeIcon.style.display = 'block';
  } else {
    openIcon.style.display = 'block';
    closeIcon.style.display = 'none';
  }
});

navLinks.addEventListener('click', function() {
  if (window.innerWidth <= 601) {
    navLinks.classList.remove('active');
    openIcon.style.display = 'block';
    closeIcon.style.display = 'none';
  }
});
</script>
